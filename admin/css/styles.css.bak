@media (min-width: 1200px) {
/*.container {width: 970px;}*/
.main-right{border-left:0px; min-height:730px;}
.main-left{min-height:730px !important}
.main-outer{ margin-bottom:30px}
}

@media (min-width: 768px) {
  .sidebar {
    position: relative;
    top: 0px;
    bottom: 0;
    left: 0;
    z-index: 1000;
    display: block;
    padding: 0px;
    overflow-x: hidden;
    overflow-y: auto;
    background-color: #f5f5f5;
    border-right: 1px solid #eee;
  }
}


.sidebar {background-color: #fff;}
.nav-sidebar {margin-top: 20px; margin-bottom: 20px; margin-left: 0px;}
.nav-sidebar a {padding-right: 20px; padding-left: 22px !important; color: #000; font-size:12px}
.nav-sidebar .active a,
.nav-sidebar a:hover,
.nav-sidebar a:focus {color: #267bda; background-color: #e4f5ff !important;}
.job-manager-h{padding:8px 20px; background:#e4e4e4; color:#267bda}
.page-title{padding:8px 20px; background:#267bda;}
